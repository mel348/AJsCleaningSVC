@{
    ViewData["Title"] = "Contact";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://codepen.io/gymratpacks/pen/VKzBEp#0">
    <link href='https://fonts.googleapis.com/css?family=Nunito:400,300' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/css/form.css">
</head>
<body>
    <div class="row">
        <div class="col-md-12">
            <div class="form-container">
                <h2>Contact us for an estimate!</h2>
                <form action="mailto:putYourEmailAddressHere" method="post" enctype="text/plain"> <!--Change mailto to your email address to see the form-->

<!--CONTACT DETAILS---------------------------------------------------------------------------------->
                <fieldset>
                    <legend>Contact Details</legend>

                        <input type="name" id="FirstName" name="First Name" placeholder="First Name">
                        <input type="name" id="LastName" name="Last Name" placeholder="Last Name">
                        <input type="company" id="company" name="Company" placeholder="Company Name (if applicable)">
                        <input type="phone" id="phone" name="Phone" placeholder="Phone Number">
                        <input type="email" id="email" name="Email" placeholder="Email">
                </fieldset>
<!--ADDRESS------------------------------------------------------------------------------------------->
                <fieldset>
                    <legend>Address</legend>
                        <input type="street1" id="street1" name="Street" placeholder="Street 1">
                        <input type="street2" id="street2" name="Street 2" placeholder="Street 2">
                        <input type="city" id="city" name="City" placeholder="City">
                        <input type="state" id="state" name="State" placeholder="State">
                        <input type="zipcode" id="zipcode" name="Zip Code" placeholder="ZIP code">
                 </fieldset>
<!--SERVICE DETAILS------------------------------------------------------------------------------------>
                <legend>Service Details</legend>
                <label for="propertyType">What is the property type?</label>
                    <select id="propertyType" name="Property Type: " onchange="showFields()">
                        <option value="">Select property type</option> <!-- Added blank option -->
                        <option value="Residential">Residential</option>
                        <option value="Commercial">Commercial</option>
                        <option value="Other">Other</option>
                    </select>

                <div id="residentialFields" style="display:none;">
                     <label>Check services you're interested in:</label><br>
                     <input type="checkbox" id="DeepCleaning" value="DeepCleaning">
                     <label class="light" for="DeepCleaning">Deep Cleaning</label><br>

                     <input type="checkbox" id="Organization" value="Organization">
                     <label class="light" for="Organization">Organization</label><br>

                     <input type="checkbox" id="NormalCleaning" value="NormalCleaning">
                     <label class="light" for="NormalCleaning">Normal Cleaning</label><br>

                     <input type="checkbox" id="MoveInOut" value="MoveInOut">
                     <label class="light" for="MoveInOut">Move-in/Move-out</label><br>

                     <input type="checkbox" id="NewPostConstructionCleanUp" value="NewPostConstructionCleanUp">
                     <label class="light" for="NewPostConstructionCleanUp">New & Post Construction Clean-Up</label><br>

                     <input type="checkbox" id="RealEstateStaging" value="RealEstateStaging">
                     <label class="light" for="RealEstateStaging">Real Estate Staging</label><br>

                     <input type="checkbox" id="NewBorn" value="NewBorn">
                     <label class="light" for="NewBorn">New Born Arrival Cleaning</label><br>

                     <input type="checkbox" id="Other" value="Other">
                     <label class="light" for="Other">Other</label>
                     <textarea id="Other" name="Residential Other"></textarea>
                </div>

                <div id="commercialFields" style="display:none;">
                     <label>Commercial Services:</label><br>
                     <input type="checkbox" id="AirBnb" value="AirBnb">
                     <label class="light" for="AirBnb">AirBnb's & Vacation Rentals</label><br>

                     <input type="checkbox" id="OfficeCleaning" value="OfficeCleaning">
                     <label class="light" for="OfficeCleaning">Office Cleaning</label><br>

                        <input type="checkbox" id="Other" value="Other">
                        <label class="light" for="Other">Other:</label>
                        <textarea id="Other" name="Commercial Other"></textarea><br>
                </div>

                <div id="otherFields" style="display:none;">
                     <label>Other Services:</label><br>
                     <input type="checkbox" id="Gardening" value="Gardening">
                     <label class="light" for="Gardening">Gardening</label><br>

                     <input type="checkbox" id="PetCare" value="PetCare">
                     <label class="light" for="PetCare">Pet Care</label><br>

                     <input type="checkbox" id="GroceryShopping" value="GroceryShopping">
                     <label class="light" for="GroceryShopping">Grocery Shopping</label><br>

                     <input type="checkbox" id="LaundryServices" value="LaundryServices">
                     <label class="light" for="LaundryServices">Laundry Services</label><br>

                        <input type="checkbox" id="Other" value="Other">
                        <label class="light" for="Other">Other</label>
                        <textarea id="Other" name="Other Services"></textarea><br>
                </div>

                    <script>
                        function showFields() {
                            var propertyType = document.getElementById("propertyType").value;
                            var residentialFields = document.getElementById("residentialFields");
                            var commercialFields = document.getElementById("commercialFields");
                            var otherFields = document.getElementById("otherFields");

                            residentialFields.style.display = "none";
                            commercialFields.style.display = "none";
                            otherFields.style.display = "none";

                            if (propertyType === "Residential") {
                                residentialFields.style.display = "block";
                            } else if (propertyType === "Commercial") {
                                commercialFields.style.display = "block";
                            } else if (propertyType === "Other") {
                                otherFields.style.display = "block";
                            }
                        }
                    
                    function formatDate(date) {                                                 // Function to make the date display day/month/year when form is submitted.
                    var options = { month: 'numeric', day: 'numeric', year: 'numeric' };
                    return new Date(date).toLocaleDateString('en-US', options);
                    }
                    </script>

<!--STORIES TO BE CLEANED------------------------------------------------------------------------------->
                    <label for="Stories">Number of stories to be cleaned (include basement as an additional story):</label>
                    <select id="Stories" name="Stories" onchange="showFields()">
                        <option value="">Choose an option</option> <!-- Added blank option -->
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5+">5+</option>
                    </select>
<!--REMAINING QUESTIONS------------------------------------------------------------------------------->
                    <fieldset>
                        <label>Total Square Footage to be cleaned:</label>
                        <input type="SquareFootage" id="SquareFootage" name="Square Footage">
                        <label>What cleaning frequency are you looking for? <br>(One-Time, Weekly, Every Other Week, Every Four Weeks, Occasional, etc):"</label>
                        <input type="Frequency" id="Frequency" name="* Frequency">
                        <label>Is there any additional information we should know?</label>
                        <textarea id="AddInfo" name="* Add Info"></textarea>
<!--DATE/TIME----------------------------------------------------------------------------------------->
                        <legend>Date/Time</legend>

                        <label>What time works best for you?</label><br>
                        <input type="checkbox" id="AnyTime" value="* Any Time">
                        <label class="light" for="AnyTime">Any Time</label><br>

                        <input type="checkbox" id="Morning" value="* Morning">
                        <label class="light" for="Morning">Morning</label><br>

                        <input type="checkbox" id="Afternoon" value="* Afternoon">
                        <label class="light" for="Afternoon">Afternoon</label><br>

                        <input type="checkbox" id="Evening" value="* Evening">
                        <label class="light" for="Evening">Evening</label>

                        <label>What is your requested appointment day and time?</label>
                        <label for="datepicker">First Choice:</label>
                        <input type="date" id="datepicker" name="* First Date Choice">
                        <label for="datepicker2">Second Choice:</label>
                        <input type="date" id="datepicker2" name="* Second Date Choice"><br>
                    </fieldset>
<!--PETS--------------------------------------------------------------------------------------------->
                    <fieldset>
                        <legend>Pet Info</legend><br>
                        <label>If you have pets please fill in the information below:</label><br>

                        <input type="checkbox" id="Dog" value="* Dog">
                        <label class="light" for="Dog" rows="3" cols="30">Dog</label><br>
                        <input type="checkbox" id="Cat" value="* Cat">
                        <label class="light" for="Cat">Cat</label><br>
                        <input type="checkbox" id="Other" value="* Other">
                        <label class="light" for="Other" rows="3" cols="30">Other</label><br><br>

                        <textarea id="OtherPet" name="* Other Pet" placeholder="If other please explain: "></textarea><br>
                        <textarea id="SizeBreed" name="* Size Breed" placeholder="Breed(or lbs.): "></textarea><br>
                        <textarea id="PetName" name="* Pet(s) Name" placeholder="Name(s): "></textarea><br>
                    </fieldset>

                    <button type="submit">Submit</button>
            </form>
        </div>
    </div>
        <script src="~/js/submitForm.js"></script>
</body>
</html>
